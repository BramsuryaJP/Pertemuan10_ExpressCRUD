
<h1 class="mt-2"> Contact List : </h1>
<a href="/contact/add"><button type="button" class="btn btn-success mb-3">Add Contact</button></a>

<% if (msg.length > 0) { %>
  <div class="alert alert-info alert-dismissible fade show" role="alert">
    <%= msg  %> 
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
  </div>
<% } %>

<table class="table table-dark table-striped">
  <thead>
    <tr>
      <th scope="col">No</th>
      <th scope="col">Name</th>
      <th scope="col">Email</th>
      <th scope="col">Action</th>
    </tr>
  </thead>
  <tbody>
    <!--melakukan perulangan jika kondisi tidak ada object dalam array-->
    <% if (contacts.length < 1) { %>
      <p>Contact's List is empty</p>
      <% } else { %>
      <!-- menunampilkan contact list -->
      <% let i = 1 %> 
      <% contacts.forEach((data) => { %>
        <tr>
        <th class="align-middle"><%= i++  %> </th>
        <td class="align-middle"><%= data.name %> </td>
        <td class="align-middle"><%= data.email  %> </td>
        <td><a href="/contact/<%= data.name  %> "><button type="button" class="btn btn-primary">Detail</button></a></td>
        </tr>
      <% }) %>
    <% } %>
  </tbody>
</table>
 